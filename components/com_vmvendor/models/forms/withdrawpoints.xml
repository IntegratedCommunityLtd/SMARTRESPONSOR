<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="primaryfieldset">
		<field 
            name="withdrawpoints" 
            type="withdrawpoints" 
            label="COM_VMVENDOR_WITHDRAW_POINTSTOWITHDRAW_TITLE" 
            description="COM_VMVENDOR_WITHDRAW_POINTSTOWITHDRAW_DESC" 
			filter="float" 
			class="inputbox required validate-numeric validate-maxpoints" 
			required="true"  />
