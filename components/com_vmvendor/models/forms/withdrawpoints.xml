		<field 
            name="withdrawpaypalemail" 
            type="withdrawpaypalemail" 
            label="COM_VMVENDOR_WITHDRAW_PAYPALEMAIL_TITLE" 
            description="COM_VMVENDOR_WITHDRAW_PAYPALEMAIL_DESC" 
			filter="safehtml" 
			class="inputbox validate-email"  />     
		<field 
            name="withdrawiban" 
            type="withdrawiban" 
            label="COM_VMVENDOR_WITHDRAW_IBAN_TITLE" 
            description="COM_VMVENDOR_WITHDRAW_IBAN_DESC" 
			filter="safehtml" 
			class="inputbox validate-iban"  />        
		<field
			name="copyoftherequest"
			type="checkbox"
			label="COM_VMVENDOR_COPYOFTHEREQUEST_LABEL"
			description="COM_VMVENDOR_COPYOFTHEREQUEST_DESC"
