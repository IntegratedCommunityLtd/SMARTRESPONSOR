<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_VMVENDOR_FORM_LBL_COMMENT_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="parent" type="text" size="40" class="inputbox"
        
            label="COM_VMVENDOR_FORM_LBL_COMMENT_PARENT"
            description="COM_VMVENDOR_FORM_DESC_COMMENT_PARENT" 
        
        
        
        filter="safehtml" /> 

       <field name="vendor_userid" type="text" size="40" class="inputbox"
            label="COM_VMVENDOR_FORM_LBL_COMMENT_VENDOR_USERID"
            description="COM_VMVENDOR_FORM_DESC_COMMENT_VENDOR_USERID" 
         default="0"
		 filter="safehtml" /> 

       <field name="title" type="text"  
            label="COM_VMVENDOR_FORM_LBL_COMMENT_TITLE"
            description="COM_VMVENDOR_FORM_DESC_COMMENT_TITLE" 
            required="true" 
            filter="string"
            maxlength="180" /> 

       <field name="comment" type="commentarea"
            label="COM_VMVENDOR_FORM_LBL_COMMENT_COMMENT"
            description="COM_VMVENDOR_FORM_DESC_COMMENT_COMMENT" 
            required="true" 
            menu_published="0"
            filter="string"
            option_on="Yes"
            option_off="Yes" />
		<field name="commentactivitystream" type="commentactivitystream"
            label="COM_VMVENDOR_FORM_LBL_COMMENT_ACTIVITYSTREAM"
            description="COM_VMVENDOR_FORM_DESC_COMMENT_ACTIVITYSTREAM" 
            menu_published="0"
            filter="string"
            option_on="Yes"
            option_off="Yes" /> 

       <field name="lang" type="text"
            label="COM_VMVENDOR_FORM_LBL_COMMENT_LANG"
            description="COM_VMVENDOR_FORM_DESC_COMMENT_LANG"  /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_VMVENDOR_FORM_LBL_COMMENT_CREATED_BY"
            description="COM_VMVENDOR_FORM_DESC_COMMENT_CREATED_BY"  /> 

       <field name="created_on" type="calendar" class="inputbox"
        
        
         default="0000-00-00 00:00:00" 
        
            label="COM_VMVENDOR_FORM_LBL_COMMENT_CREATED_ON"
            description="COM_VMVENDOR_FORM_DESC_COMMENT_CREATED_ON" 
        filter="safehtml" /> 

       <field name="reports" type="text" size="40" class="inputbox"
        
            label="COM_VMVENDOR_FORM_LBL_COMMENT_REPORTS"
            description="COM_VMVENDOR_FORM_DESC_COMMENT_REPORTS" 
         default="0" 
        
        
        filter="safehtml" /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
