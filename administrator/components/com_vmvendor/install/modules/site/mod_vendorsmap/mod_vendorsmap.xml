	<version>1.0.0</version>
	<description>MOD_VENDORSMAP_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_vendorsmap">mod_vendorsmap.php</filename>
		<folder>css</folder>
		<folder>js</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
